terraform {
  required_providers {
    virtualbox = {
      source = "terra-farm/virtualbox"
      version = "0.2.1"
    }
  }
}

resource "virtualbox_vm" "{{ .Name }}" {
  name      = "{{ .Name }}"
  image     = "{{ .Image }}"
  cpus      = {{ .CPUs }}
  memory    = "{{ .Memory }}"

  network_adapter {
    type           = "hostonly"
    host_interface = "VirtualBox Host-Only Ethernet Adapter"
  }
}